<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style1"

    tools:context=".MainActivity5">

    <EditText
        android:id="@+id/sayi5text"
        android:layout_width="250dp"
        android:layout_height="68dp"
        android:layout_marginTop="98dp"
        android:ems="10"
        android:hint="Güç Giriniz"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kuruluguc"
        android:layout_width="219dp"
        android:layout_height="59dp"
        android:layout_marginTop="84dp"
        android:onClick="kuruluguchsp"
        android:text="Talep Güç Oranı Hesapla"
        app:layout_constraintEnd_toEndOf="@+id/sayi5text"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/sayi5text"
        app:layout_constraintTop_toBottomOf="@+id/sayi5text" />

    <TextView
        android:id="@+id/kurulusonuc"
        android:layout_width="242dp"
        android:layout_height="77dp"
        android:layout_marginTop="64dp"
        android:background="@color/design_default_color_background"
        android:text="Sonuç Burada"
        android:textAlignment="center"
        android:textColor="#1A39E3"
        android:textColorHint="#112FD5"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/kuruluguc"
        app:layout_constraintStart_toStartOf="@+id/kuruluguc"
        app:layout_constraintTop_toBottomOf="@+id/kuruluguc" />

</androidx.constraintlayout.widget.ConstraintLayout>