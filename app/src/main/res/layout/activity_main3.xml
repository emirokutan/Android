<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <EditText
        android:id="@+id/editext1"
        android:layout_width="302dp"
        android:layout_height="62dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Uzunluk Giriniz"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/editext2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/editext2"
        android:layout_width="302dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="Güç Giriniz"
        android:inputType="number"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/editext3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editext1" />

    <EditText
        android:id="@+id/editext3"
        android:layout_width="302dp"
        android:layout_height="62dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="4dp"
        android:ems="10"
        android:hint="Kesit Giriniz"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/hesaplabuton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editext2" />

    <Button
        android:id="@+id/hesaplabuton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:onClick="hesaplasnc"
        android:text="Trifaze Hesapla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editext3" />

    <TextView
        android:id="@+id/sonuctextt"
        android:layout_width="247dp"
        android:layout_height="89dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="24dp"
        android:hint="Sonuç Burada"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#1836DA"
        android:textColorHint="#1231DD"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesaplabuton"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>